<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Education</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/index.css">
</head>

<body>
    <form action="" method="" class="d-flex flex-column w-25 mx-auto my-3 border border-primary p-2">
        <h3>Add new Education</h3>
        <label for="title">Titulo: </label>
        <input type="text" name="title" id="title">
        <label for="date">Desde: </label>
        <input type="date" name="desde" id="desde">
        <label for="date">Hasta: </label>
        <input type="date" name="hasta" id="hasta">
        <label for="description">Descripcion:</label>
        <textarea name="description" id="description" rows="5"></textarea>
        <button id="push-buttom" class="mt-2">Subir</button>
    </form>
    <script>
        const pushButton = document.getElementById('push-buttom');
        let data = {};

        pushButton.addEventListener("click", (event) => {
            event.preventDefault();
            let title = document.getElementById("title").value;
            let desde = document.getElementById("desde").value;
            let hasta = document.getElementById('hasta').value;
            let description = document.getElementById('description').value;

            data = {
                title: title,
                desde: desde,
                hasta: hasta,
                description: description,
            }

            console.log(data)
        })
    </script>
</body>

</html>